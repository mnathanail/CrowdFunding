@model IEnumerable<Crowdfunding.Models.Dashboard>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>My Projects</h2>

    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Backers)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>Progress</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Backers)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sum)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        <div class="progress" id="theprogressbar">
                            @{var progr = (item.Sum * 100 / item.Amount).ToString("0.##");
                                var pres = progr + "%";}
                            <div class="progress-bar progress-bar-striped active" role="progressbar"
                                 aria-valuenow=@progr aria-valuemin="0" aria-valuemax="100" style="width:@pres;color:black">
                                @progr%
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>