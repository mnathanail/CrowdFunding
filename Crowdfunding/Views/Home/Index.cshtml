@model IEnumerable<Crowdfunding.Models.Dashboard>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <img src="~/images/logo.png" alt="Crowdfunders" class="img-responsive center-block" />
    <h2>Welcome to Crowdfunders!</h2>
    <p>A free platform to helps artists, musicians, filmmakers, designers, and other creators find the resources and support they need to make their ideas a reality.</p>
</div>


<table class="table table-striped table-hover table-responsive table-bordered">
    <caption>Top-10 Projects (By Funds raised)</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sum)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sum)
                </td>
            </tr>
        }
    </tbody>
</table>