@foreach (var imgPath in Directory.GetFiles(Url.Content(Model.MediaPath)))
{
    var img = new FileInfo(imgPath);
    <img src="@Url.Content("~/media/"+Model.UserId + "/"+Model.ProjectName +"/" + img.Name)" />
}

@foreach (var item in Model.Benefit)
{
    <div>@item.BenefitName</div>
    <div>@item.BenefitDesciption</div>
    <div>@item.BenefitPrice</div>
    <form asp-controller="UsersBenefits" asp-action="Create">
        <div class="form-group">
            <input asp-for=@item.BenefitId type="hidden" name="BenefitId" class="form-control" />
            <span asp-validation-for=@item.BenefitId class="text-danger"></span>
            <input asp-for=@Model.ProjectId type="hidden" name="ProjectId" class="form-control" />
        </div>
        <input type="submit" value="buy dat shit" />
    </form>
}

